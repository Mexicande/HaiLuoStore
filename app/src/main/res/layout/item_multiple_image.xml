<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/diver"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    tools:showIn=""
    android:paddingTop="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="7">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/home_iamge_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@mipmap/home_iamge_big" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_iamge_big"
            android:layout_weight="4"
            android:gravity="right"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/home_iamge_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_iamge_above" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/home_iamge_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/home_iamge_below" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>